<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kubilay.toastkullanimi.MainActivity">

  <LinearLayout
      android:layout_width="368dp"
      android:layout_height="495dp"
      android:orientation="vertical"
      tools:layout_editor_absoluteY="8dp"
      tools:layout_editor_absoluteX="8dp">

    <!-- Düz Toast mesajı için -->
    <Button
        android:id="@+id/btnToast1"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Toast Mesajını Göster"
        android:onClick="btnToast1_onClick"/>

    <!-- Programatik olarak özelleştirilmiş Toast mesajı için -->
    <Button
        android:id="@+id/btnToast2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Programatik Olarak Özelleştirilmiş Toast Mesajı"
        android:onClick="btnToast2_onClick" />

    <!-- Deklaratif olarak özelleştirilmiş Toast mesajı için -->
    <Button
        android:id="@+id/btnToast3"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Deklaratif Olarak Özelleştirilmiş Toast Mesajı"
        android:onClick="btnToast3_onClick" />
  </LinearLayout>

</android.support.constraint.ConstraintLayout>
